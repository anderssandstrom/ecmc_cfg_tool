record(stringout, "$(P)$(R)CMD") {
  field(DTYP, "stream")
  field(OUT,  "@ecmcCmd.proto sendCmd @asyn($(PORT),$(ADDR),$(TIMEOUT))$(DRVINFO)")
  field(VAL,  "GetControllerError()")
  field(PINI, "NO")
}

record(stringin, "$(P)$(R)QRY") {
  field(DTYP, "stream")
  field(INP,  "@ecmcCmd.proto query($(CMD)) @asyn($(PORT),$(ADDR),$(TIMEOUT))$(DRVINFO)")
  field(SCAN, "Passive")
}
